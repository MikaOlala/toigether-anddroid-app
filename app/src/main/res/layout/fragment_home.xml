    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="37sp"
                android:paddingHorizontal="14sp"
                android:paddingVertical="8sp">

                <ImageView
                    android:id="@+id/profileIcon"
                    android:layout_width="37sp"
                    android:layout_height="37sp"
                    android:background="#f0f0f0"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    style="@style/profile_text"
                    android:text="Профиль"
                    app:layout_constraintLeft_toRightOf="@+id/profileIcon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    style="@style/highlighted_big"
                    android:text="@string/interesting_events"
                    android:textSize="16sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="208sp"
                android:src="@drawable/banner"
                android:paddingHorizontal="21sp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="128sp"
                android:layout_marginTop="11sp"
                android:paddingHorizontal="18sp">

                <TextView
                    style="@style/highlighted_thin"
                    android:id="@+id/categoryTitle"
                    android:text="@string/categories"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/all"
                    android:textSize="9sp"
                    android:textColor="@color/orange"
                    android:background="@drawable/orange_border"
                    android:paddingHorizontal="6sp"
                    android:paddingVertical="3sp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

<!--                change fonts style -->
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:scrollbars="none"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/categoryTitle">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/wedding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:elevation="4sp"
                                app:cardElevation="4sp"
                                app:cardCornerRadius="6sp"
                                android:layout_marginHorizontal="3sp">
                                <ImageView
                                    android:layout_width="106sp"
                                    android:layout_height="85sp"
                                    android:src="@drawable/wedding"/>
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Свадьба"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:textColor="@color/orange"
                                android:layout_marginTop="7sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/birthday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:elevation="4sp"
                                app:cardElevation="4sp"
                                app:cardCornerRadius="6sp"
                                android:layout_marginHorizontal="3sp">
                                <ImageView
                                    android:layout_width="106sp"
                                    android:layout_height="85sp"
                                    android:src="@drawable/birthday" />
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="День рождения"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:textColor="@color/orange"
                                android:layout_marginTop="7sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/corporateParty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:elevation="4sp"
                                app:cardElevation="4sp"
                                app:cardCornerRadius="6sp"
                                android:layout_marginHorizontal="3sp">
                                <ImageView
                                    android:layout_width="106sp"
                                    android:layout_height="85sp"
                                    android:src="@drawable/party"/>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Корпоратив"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:textColor="@color/orange"
                                android:layout_marginTop="7sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/teamBuilding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:elevation="4sp"
                                app:cardElevation="4sp"
                                app:cardCornerRadius="6sp"
                                android:layout_marginHorizontal="3sp">
                                <ImageView
                                    android:layout_width="106sp"
                                    android:layout_height="85sp"
                                    android:src="@drawable/team_building"/>
                            </androidx.cardview.widget.CardView>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Тимбилдинг"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:textColor="@color/orange"
                                android:layout_marginTop="7sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="196sp"
                android:layout_marginTop="11sp"
                android:paddingHorizontal="18sp">

                <TextView
                    style="@style/highlighted_thin"
                    android:id="@+id/ratingTitle"
                    android:text="@string/top_rating"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewTopRating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"

                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ratingTitle"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="196sp"
                android:layout_marginTop="11sp"
                android:paddingHorizontal="18sp">

                <TextView
                    style="@style/highlighted_thin"
                    android:id="@+id/recentlyRow"
                    android:text="@string/recently_watched"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewRecentlyWatched"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"

                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/recentlyRow"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="48sp"/>

        </LinearLayout>
    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>