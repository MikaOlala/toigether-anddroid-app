<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/organization_bn"
    android:layout_width="214sp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/organizationPic"
        android:layout_width="match_parent"
        android:layout_height="131sp"
        android:elevation="4sp"
        app:cardElevation="4sp"
        app:cardCornerRadius="3sp"
        android:layout_marginHorizontal="6sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/organizationImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/organization_bm" />
    </androidx.cardview.widget.CardView>

    <TextView
        style="@style/card_header"
        android:id="@+id/organizationTitle"
        android:layout_width="165sp"
        android:layout_marginVertical="6sp"
        android:layout_marginStart="6sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/organizationPic"/>
    <ImageView
        style="@style/heart"
        android:id="@+id/heart"
        android:layout_marginEnd="2sp"
        android:layout_marginTop="6sp"
        app:layout_constraintRight_toLeftOf="@+id/rating"
        app:layout_constraintTop_toBottomOf="@+id/organizationPic"/>
    <TextView
        style="@style/rating"
        android:id="@+id/rating"
        android:text="9.8"
        android:layout_marginTop="6sp"
        android:layout_marginEnd="6sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/organizationPic"
        app:layout_constraintBottom_toBottomOf="@+id/heart"/>
    <TextView
        style="@style/card_content"
        android:id="@+id/organizationText"
        android:maxLines="2"
        android:layout_marginHorizontal="6sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/organizationTitle"/>
</androidx.constraintlayout.widget.ConstraintLayout>