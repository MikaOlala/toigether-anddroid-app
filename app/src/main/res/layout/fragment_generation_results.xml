<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GenerationResultsFragment"
    android:orientation="vertical"
    android:padding="18sp">

    <TextView
        android:layout_width="271sp"
        android:layout_height="wrap_content"
        android:text="@string/generation_results_header"
        android:textSize="14sp"
        android:textColor="@color/orange"
        android:textStyle="bold"
        android:layout_marginTop="30sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сортировка: По рейтингу"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/dirty_gray"
        android:layout_marginVertical="16sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewGeneration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"

        android:layout_marginBottom="48sp"/>

<!--    <View-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_margin="48sp"/>-->

</LinearLayout>