<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".generation.ResultListFragment"
    android:orientation="vertical"
    android:padding="18sp">

    <TextView
        android:id="@+id/resultHeader"
        style="@style/highlighted_thin"
        android:layout_width="271sp"
        android:text="@string/generation_results_header" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="16sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sort"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textSize="12sp"
            android:textColor="@color/dirty_gray"/>

        <TextView
            android:id="@+id/sortBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="По рейтингу"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textSize="12sp"
            android:textColor="@color/dirty_gray"
            android:layout_marginStart="4sp"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewGeneration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"

        android:layout_marginBottom="48sp"/>

<!--    <View-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_margin="48sp"/>-->

</LinearLayout>