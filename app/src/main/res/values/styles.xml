<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button_test">
        <item name="android:layout_width">368sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginBottom">8sp</item>

        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="category_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black_black</item>
        <item name="android:layout_marginStart">21sp</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="category_arrow">
        <item name="android:layout_width">8sp</item>
        <item name="android:layout_height">11sp</item>
        <item name="android:src">@drawable/ic_arrow</item>
        <item name="android:layout_marginEnd">21sp</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="category_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1sp</item>
        <item name="background">@color/gray</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textSize">16sp</item>
        <item name="android:editTextColor">@color/almost_black</item>
    </style>

    <style name="text_gray_medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/boring_gray</item>
        <item name="android:layout_marginBottom">11sp</item>
    </style>

<!--    profile on top-->
    <style name="profile_text">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/profile</item>
        <item name="android:textSize">7sp</item>
        <item name="android:layout_marginStart">6sp</item>
    </style>

    <!--    profile -->
    <style name="profile_bold">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black_black</item>
    </style>

    <!--    profile  -->
    <style name="profile_medium">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="textAllCaps">true</item>
    </style>

    <!--    bold orange header - favourites - home -->
    <style name="highlighted">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <!--    home - g_results - dialog_meeting -->
    <style name="highlighted_thin">
        <item name="fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--    home - fr_generation-->
    <style name="highlighted_big">
        <item name="fontFamily">@font/montserrat_extra_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <!--    dialog_meeting -->
    <style name="highlighted_little">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--    tab_layout-->
    <style name="ordinary_text">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/almost_black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--    g_location-->
    <style name="ordinary_text_deep">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_black</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!--    g_budget-->
    <style name="pale_text">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/pale_gray</item>
        <item name="android:textSize">11sp</item>
    </style>

    <!--    g_location - g_service - g_budget - organization-->
    <style name="header_black">
        <item name="fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--    organization-->
    <style name="header_black_little">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/almost_black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--    card_item - card_item_generation_results-->
    <style name="card_header">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:text">Event organization name</item>
        <item name="android:textColor">@color/almost_black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--    card_item - card_item_generation_results-->
    <style name="card_content">
        <item name="fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:text">@string/text_example</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">7sp</item>
    </style>

<!--    organization-->
    <style name="service_content">
        <item name="fontFamily">@font/montserrat_semi_bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/text_example</item>
        <item name="android:textColor">@color/light_boring_gray</item>
        <item name="android:textSize">7sp</item>
    </style>

    <!--    card_item - card_item_generation_results - organization-->
    <style name="heart">
        <item name="android:layout_width">15sp</item>
        <item name="android:layout_height">15sp</item>
        <item name="android:src">@drawable/heart</item>
    </style>

    <!--    card_item_generation_results - organization-->
    <style name="rating">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/orange</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <!--    tab_layout - organization - dialog_meeting -->
    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/app_button</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--   dialog_meeting -->
    <style name="button_light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/app_button_light</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/orange</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="tabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">9sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="tabLayoutEvent" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>